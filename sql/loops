declare 
a number:=0;
b number:=1;
c number;

BEGIN 
    dbms_output.PUT_LINE(a);
    dbms_output.PUT_LINE(b);
    for i in 1..10 loop
    c:=a+b;
    dbms_output.put_line(c);
    a:=b;
    b:=c;
    end loop;
end;
    






















































































































































































































































































